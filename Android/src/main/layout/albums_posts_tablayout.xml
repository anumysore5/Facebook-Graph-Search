<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/albums_posts_tablayout"
        android:layout_width="368dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabTextColor="@android:color/black"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <android.support.design.widget.TabItem
            android:id="@+id/albums_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:icon="@drawable/details_activity_albums_tab"
            android:text="@string/albums_tab" />

        <android.support.design.widget.TabItem
            android:id="@+id/posts_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:icon="@drawable/details_activity_posts_tab"
            android:text="@string/posts_tab" />
    </android.support.design.widget.TabLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/albums_posts_tablayout">

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>